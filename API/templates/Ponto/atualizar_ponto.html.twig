{% extends 'Base/base.html.twig' %}

{% block corpo %}


    <div class="box-header with-border">
        <section class="nav_top">
            <div class="h1_geral">
                <h1>Atualizar dados do ponto</h1>
            </div>
        </section>
    </div>

    <section class="section_top">
        <div class="h2_geral">
            <h2>Dados cadastrais</h2>
        </div>
    </section>


    <form class="cover-conteiner-form" id="atualizar-ponto">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="nome_ponto-atualizar">Nome: </label>
                <input type="text" class="form-control" id="nome_ponto-atualizar" placeholder="Digite o nome do ponto">
            </div>

            <div class="form-group col-md-3">
                <label for="bairro_ponto-atualizar">Bairro: </label>
                <input type="text" class="form-control" id="bairro_ponto-atualizar" placeholder="Digite bairro do ponto">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="rua_ponto-atualizar">Rua: </label>
                <input type="text" class="form-control" id="rua_ponto-atualizar" placeholder="Digite a rua do ponto">
            </div>

            <div class="form-group col-md-3" >
                <label for="ponto_ref_ponto-atualizar">Ponto de referência: </label>
                <input type="text" class="form-control" id="ponto_ref_ponto-atualizar" placeholder="Digite um ponto de referência">
            </div>
        </div>


        <button id="salvar-ponto-atualizar" type="submit" class="btn btn-success">Salvar</button>
        <button id="limpar-ponto-atualizar" type="submit"class="btn btn-danger">Limpar</button>
    </form>

{% endblock %}