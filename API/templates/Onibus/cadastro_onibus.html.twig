{% extends 'Base/base.html.twig' %}

{% block corpo %}


<div class="box-header with-border">
    <section class="nav_top">
        <div class="h1_geral">
            <h1>Cadastro ônibus</h1>
        </div>
    </section>
</div>

<section class="section_top">
    <div class="h2_geral">
        <h2>Dados cadastrais</h2>
    </div>
</section>


<form class="cover-conteiner-form">
    <div class="form-row">

        <div class="form-group col-md-5">
            <label for="nome_motorista_onibus-cadastro">Nome do motorista responsavel: </label>
            <input type="text" class="form-control" id="nome_motorista_onibus-cadastro" placeholder="Digite o nome do motorista responsavel">
        </div>

        <div class="form-group col-md-5">
            <label for="numero_placa_onibus-cadastro">Placa: </label>
            <input type="text" class="form-control" id="numero_placa_onibus-cadastro" placeholder="Digite o número da placa do onibus">
        </div>


    </div>

    <i id="salvar-onibus-cadastro" class="btn btn-success">Salvar</i>
    <i id="limpar-onibus-cadastro" class="btn btn-danger">Limpar</i>
</form>

{% endblock %}