{% extends 'Base/base.html.twig' %}

{% block corpo %}

    <div class="box-header with-border">
            <section class="nav_top">
                <div class="h1_cadastro"><h1>Lista dos alunos</h1></div>
            </section>
        </div>

    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Número</th>
                <th scope="col">RA</th>
                <th scope="col">Bairro</th>
                <th scope="col">Rua</th>
                <th scope="col">Nº</th>
                <th scope="col">Placa ônibus</th>
                <th scope="col">Opções</th>
            </tr>
        </thead>
        <tbody id="tabela-alunos">
            {% for aluno in alunos %}
                <tr>
                    <td>{{ aluno.id }}</td>
                    <td>{{ aluno.nome }}</td>
                    <td>{{ aluno.email }}</td>
                    <td>{{ aluno.numero_contato }}</td>
                    <td>{{ aluno.ra }}</td>
                    <td>{{ aluno.bairro }}</td>
                    <td>{{ aluno.rua }}</td>
                    <td>{{ aluno.numero_casa }}</td>
                    <td>{{ aluno.placa|default('-')}}</td>
                    <td>
                        <i data-id-aluno="{{ aluno.id }}" class="btn btn-sm btn-success editar_alunos">Editar</i>
                        <i data-id-aluno="{{ aluno.id }}" class="btn btn-sm btn-danger remove_alunos">Apagar</i>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}