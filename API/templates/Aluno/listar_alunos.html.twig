{% extends 'Base/base.html.twig' %}

{% block corpo %}

    <div class="box-header with-border">
            <section class="nav_top">
                <div class="h1_geral"><h1>Lista dos alunos</h1></div>
            </section>
        </div>

    <div>
        <section>
            <div class="position-cadastro">
                <a class="btn btn-success" href="/aluno/cadastro"> Cadastrar </a>
            </div>
        </section>
    </div>
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Número</th>
                <th scope="col">RA</th>
                <th scope="col">Bairro</th>
                <th scope="col">Rua</th>
                <th scope="col">Nº</th>
                <th scope="col">Placa ônibus</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody id="tabela-alunos">
            {% for aluno in alunos %}
                <tr>
                    <td>{{ aluno.id }}</td>
                    <td>{{ aluno.nome }}</td>
                    <td>{{ aluno.email }}</td>
                    <td>{{ aluno.numero_contato }}</td>
                    <td>{{ aluno.ra }}</td>
                    <td>{{ aluno.bairro }}</td>
                    <td>{{ aluno.rua }}</td>
                    <td>{{ aluno.numero_casa }}</td>
                    <td>{{ aluno.placa|default('-')}}</td>
                    <td>
                        <i data-id-aluno="{{ aluno.id }}" class="btn btn-sm btn-primary editar_alunos">
                            <ion-icon src="/Imagens/pencil-outline.svg" class="icon-edit"></ion-icon>
                        </i>
                        <i data-id-aluno="{{ aluno.id }}" class="btn btn-sm btn-danger remove_alunos">
                            <ion-icon src="/Imagens/trash-outline.svg" class="icon-delete"></ion-icon>
                        </i>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}