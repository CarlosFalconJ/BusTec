{% extends 'Base/base.html.twig' %}

{% block corpo %}


    <div class="box-header with-border">
        <section class="nav_top">
            <div class="h1_cadastro">
                <h1>Vínculo de Rotas - Ônibus</h1>
            </div>
        </section>
    </div>

    <section class="section_top">
        <div class="h2_cadastro">
            <h2>Dados de vínculo</h2>
        </div>
    </section>


    <form class="cover-conteiner-form">
        <div class="form-row">

            <div class="form-group col-md-5 select-options">
                <label for="escolha_vinculo-rota">Rota: </label>
                <select class="custom-select escolha_vinculo-rota">
                    <option selected>Selecione a rota</option>
                    {% for rota in rotas %}

                    <option value="{{ rota.id }}">{{ rota.nome }}</option>

                    {% endfor %}
                </select>
            </div>

            <div class="form-group col-md-5 select-options">
                <label for="escolha_vinculo-onibus">Ônibus (Placa): </label>
                <select class="custom-select escolha_vinculo-onibus">
                    <option selected>Selecione o ônibus</option>
                    {% for onibus in allOnibus %}

                    <option value="{{ onibus.id }}">{{ onibus.placa}} </option>

                    {% endfor %}
                </select>
            </div>
        </div>

        <button id="salvar_vinculo-rota-onibus" type="submit" class="btn btn-success">Salvar</button>
        <button id="limpar_vinculo-rota-onibus" type="submit" class="btn btn-danger">Limpar</button>
    </form>

{% endblock %}