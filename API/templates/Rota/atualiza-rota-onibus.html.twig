{% extends 'Base/base.html.twig' %}

{% block corpo %}


    <div class="box-header with-border">
        <section class="nav_top">
            <div class="h1_geral">
                <h1>Atualizar vínculo de Rotas - Ônibus</h1>
            </div>
        </section>
    </div>

    <section class="section_top">
        <div class="h2_geral">
            <h2>Dados de vínculo</h2>
        </div>
    </section>


    <form class="cover-conteiner-form">
        <div class="form-row">

            <div class="form-group col-md-5 select-options">
                <label for="atualizar_vinculo-rota">Rota: </label>
                <select class="custom-select atualizar_vinculo-rota-o">
                    <option selected>Selecione a rota</option>
                    {% for rota in rotas %}

                        <option value="{{ rota.id }}">{{ rota.nome }}</option>

                    {% endfor %}
                </select>
            </div>

            <div class="form-group col-md-5 select-options">
                <label for="atualizar_vinculo-onibus">Ônibus (Placa): </label>
                <select class="custom-select atualizar_vinculo-onibus">
                    <option selected>Selecione o ônibus</option>
                    {% for onibus in allOnibus %}

                        <option value="{{ onibus.id }}">{{ onibus.placa}} </option>

                    {% endfor %}
                </select>
            </div>
        </div>

        <button id="atualizar_vinculo-rota-onibus" type="submit" class="btn btn-success">Salvar</button>
        <button id="limpar_vinculo-rota-onibus" type="submit" class="btn btn-danger">Limpar</button>
    </form>

{% endblock %}