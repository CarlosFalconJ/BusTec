{% extends 'Base/base.html.twig' %}

{% block corpo %}


    <div class="box-header with-border">
        <section class="nav_top">
            <div class="h1_geral">
                <h1>Atualizae dados da Rotas</h1>
            </div>
        </section>
    </div>

    <section class="section_top">
        <div class="h2_cadastro">
            <h2>Dados cadastrais</h2>
        </div>
    </section>


    <form class="cover-conteiner-form">
        <div class="form-row">

            <div class="form-group col-md-4">
                <label for="nome_rota-atualizar">Nome: </label>
                <input type="text" class="form-control" id="nome_rota-atualizar" placeholder="Digite o nome da rota">
            </div>

            <div class="form-group col-md-4">
                <label for="cidade_rota-atualizar">Cidade: </label>
                <input type="text" class="form-control" id="cidade_rota-atualizar" placeholder="Digite o nome da cidade">
            </div>

        </div>

        <button id="salvar-rota-atualizar" type="submit" class="btn btn-success">Salvar</button>
        <button id="limpar-rota-atualizar" type="submit" class="btn btn-danger">Limpar</button>
    </form>

{% endblock %}